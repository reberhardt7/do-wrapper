{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": [
    "src-old/"
  ],
  "typedocOptions": {
    "out": "docs",
    "excludePrivate": true,
    "excludeProtected": true
  }
}
